{
  "name": "test-runner",
  "displayName": "web/test-runner-extension",
  "description": "vscode plugin for @web/test-runner to run / debug one or more test",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.53.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "test-runner.runWebTestRunner",
        "title": "TestRunner: Start test on current file"
      },
      {
        "command": "test-runner.runInWatchMode",
        "title": "TestRunner:Start test on current file in watch mode"
      },
      {
        "title": "Enable CodeLens",
        "command": "test-runner.enableCodeLens",
        "category": "CodeLens"
      }
    ],
    "configuration": {
      "properties": {
        "test-runner.enableCodeLens": {
          "type": "boolean",
          "default": true
        },
        "test-runner.codeLensSelector": {
          "type": "string",
          "default": "**/*.{test,spec}.{js,jsx,ts,tsx}",
          "description": "CodeLens will be shown on files matching this pattern"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/find-root": "^1.1.2",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.53.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "publisher": "manishgowardipe",
  "dependencies": {
    "find-root": "^1.1.0"
  }
}
